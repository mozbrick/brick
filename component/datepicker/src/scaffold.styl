@import '../../../build/mixins';
@import '../../../build/params';

$polyfillInputBorderWidth = 1px;

x-datepicker {
    position: relative;
    display: inline-block;
    overflow: visible !important; // allow displaying calendar

    font-family: $COMPONENT_UI_FONT_FAMILY;

    & > .x-datepicker-input {
        width: 100%;
        height: 100%;
        box-sizing(border-box);
        margin: 0;
        border: 0px solid transparent;

        vertical-align: top;

        font: inherit;
    }

    & > .x-datepicker-polyfill-input {
        width: 100%;
        height: 100%;
        box-sizing(border-box);
        position: relative;
        margin: 0;
        padding: .25em;
        border: 0px solid transparent;

        vertical-align: top;

        font: inherit;
    }

    & > .x-datepicker-polyfill-ui {
        position: absolute;
        left: 0;
        top: 100%;
        margin-top: -1 * $polyfillInputBorderWidth; // offset to merge with polyfill input's border

        min-width: 100%;
        max-width: none;

        z-index: 2147483647;
    }

    &[polyfill] {
        & > .x-datepicker-input {
            display: none!important;
        }

        & > .x-datepicker-polyfill-input {
            width: 100%;
            height: 100%;
        }

        & > .x-datepicker-polyfill-ui {
            animated(opacity\, visibility, 0.2s);
            opacity: 0;
            visibility: hidden;
        }

        &:focus, &[focused] {
            // temporarily force entire datepicker to top of z-index
            // stack while user is selecting date to simulate the global
            // top z-index effect that chrome's datepicker does without
            // affecting html layout
            z-index: 2147483647;

            & > .x-datepicker-polyfill-ui {
                opacity: 1;
                visibility: visible;
            }
        }
    }

    &:not([polyfill]) {
        & > .x-datepicker-input {
            width: 100%;
            height: 100%;
        }

        & > .x-datepicker-polyfill-input {
            display: none!important;
        }

        & > .x-datepicker-polyfill-ui {
            display: none!important;
        }
    }
}
