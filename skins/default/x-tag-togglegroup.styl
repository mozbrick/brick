@import 'mixins'
@import 'params'

x-togglegroup{
    font-family: $COMPONENT_UI_FONT_FAMILY;
    & > x-toggle{
        simplegradient();
        animated(background-position background-color box-shadow, 0.1s);

        border-width: 1px;
        border-color: #aaa grey #777 grey;
        border-style: solid;
        text-shadow: 1px 1px white;
        vertical-align: middle;

        &:hover:not([checked]){
            background-position: 0 1em;
        }

        &[checked]{
            background-image: none;
            background-color: #eee;
            box-shadow: inset 1px 1px 2px #888;
        }


        &[type="radio"]{
            &:first-of-type{
                border-top-left-radius: 4px;
                border-bottom-left-radius: 4px;
            }

            &:last-of-type{
                border-top-right-radius: 4px;
                border-bottom-right-radius: 4px;
            }

            &:not(:first-of-type){
                margin-left: -1px;
            }
        }

        &:not([type="radio"]){
            rounded();
            margin-left: .2em;
            margin-right: .2em;

            &:first-child{
                margin-left: 0;
            }

            &:last-child{
                margin-right: 0;
            }
        }

        &[focus]{
            -webkit-box-shadow: 0 0 2px 1px rgba(0, 100, 155, 0.8);
            -moz-box-shadow: 0 0 2px 1px rgba(0, 100, 155, 0.8);
            -ms-box-shadow: 0 0 2px 1px rgba(0, 100, 155, 0.8);
            box-shadow: 0 0 2px 1px rgba(0, 100, 155, 0.8);
        }
    }
}